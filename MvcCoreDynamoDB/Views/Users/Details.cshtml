    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idUsers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idUsers)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fape)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fape)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sape)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sape)
