@model IEnumerable<MvcCoreDynamoDB.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sape)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sape)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { idUsers=item.idUsers }) |
                @Html.ActionLink("Details", "Details", new { idUsers = item.idUsers }) |
                @Html.ActionLink("Delete", "Delete", new { idUsers = item.idUsers })
            </td>
        </tr>
}
    </tbody>
</table>
